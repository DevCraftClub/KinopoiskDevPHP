{
	"name": "devcraftclub/kinopoisk-dev-php",
	"description": "PHP клиент для API Kinopoisk.dev",
	"type": "library",
	"keywords": [
		"kinopoisk",
		"movies",
		"films",
		"api",
		"client",
		"cinema",
		"database"
	],
	"homepage": "https://devcraft.club/downloads/kinopoiskdev-wrapper.34/",
	"license": "MIT",
	"authors": [
		{
			"name": "Maxim Harder",
			"email": "dev@devcraft.club",
			"homepage": "https://devcraft.club",
			"role": "Developer"
		}
	],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": ">=8.3",
		"guzzlehttp/guzzle": "^7.9",
		"marcin-orlowski/lombok-php": "^1.1",
		"symfony/cache": "^7.3",
		"symfony/yaml": "^7.3",
		"vlucas/phpdotenv": "^5.6"
	},
	"require-dev": {
		"mockery/mockery": "^1.6",
		"phpunit/phpunit": "^12.3",
		"symfony/dotenv": "^7.3",
		"symfony/var-dumper": "^7.3"
	},
	"autoload": {
		"psr-4": {
			"KinopoiskDev\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"KinopoiskDev\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"test-coverage": "phpunit --coverage-html coverage",
		"docs": "php bin/generate_docs.php",
		"quality": [
			"@test",
			"@test-coverage"
		]
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"allow-plugins": {
			"composer/package-versions-deprecated": true
		}
	},
	"extra": {
		"branch-alias": {
			"dev-main": "1.0.x-dev"
		}
	},
	"support": {
		"issues": "https://github.com/DevCraftClub/KinopoiskDevPHP/issues",
		"source": "https://github.com/DevCraftClub/KinopoiskDevPHP",
		"website": "https://devcraft.club/tickets/categories/razrabotki.2/create",
		"telegram": "https://t.me/devcraftclub_support",
		"docs": "https://readme.devcraft.club/latest/dev/kinopoiskdev/"
	}
}
