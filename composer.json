{
	"name": "devcraftclub/kinopoisk-dev",
	"description": "PHP клиент для API Kinopoisk.dev",
	"type": "library",
	"keywords": [
		"kinopoisk",
		"movies",
		"films",
		"api",
		"client",
		"cinema",
		"database"
	],
	"homepage": "https://devcraft.club/downloads/kinopoisk-dev-php.33/",
	"license": "MIT",
	"authors": [
		{
			"name": "Maxim Harder",
			"email": "dev@devcraft.club",
			"homepage": "https://devcraft.club",
			"role": "Developer"
		}
	],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": ">=8.3",
		"guzzlehttp/guzzle": "7.9.3",
		"marcin-orlowski/lombok-php": "^1.1",
		"symfony/cache": "^7.3",
		"vlucas/phpdotenv": "^5.6"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.5",
		"phpstan/phpstan": "^1.10",
		"squizlabs/php_codesniffer": "^3.8",
		"friendsofphp/php-cs-fixer": "^3.40",
		"mockery/mockery": "^1.6",
		"symfony/var-dumper": "^6.4 || ^7.0",
		"symfony/dotenv": "^6.4 || ^7.0"
	},
	"autoload": {
		"psr-4": {
			"KinopoiskDev\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"KinopoiskDev\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"test-coverage": "phpunit --coverage-html coverage",
		"phpstan": "phpstan analyse src --level=8",
		"phpcs": "phpcs --standard=PSR12 src/",
		"phpcs-fix": "phpcbf --standard=PSR12 src/",
		"php-cs-fixer": "php-cs-fixer fix --dry-run --diff",
		"php-cs-fixer-fix": "php-cs-fixer fix",
		"docs": "php bin/generate_docs.php",
		"quality": [
			"@phpstan",
			"@phpcs",
			"@test"
		]
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"allow-plugins": {
			"composer/package-versions-deprecated": true
		}
	},
	"extra": {
		"branch-alias": {
			"dev-main": "1.0.x-dev"
		}
	},
	"support": {
		"issues": "https://github.com/your-username/kinopoisk-dev-client/issues",
		"source": "https://github.com/your-username/kinopoisk-dev-client"
	}
}
